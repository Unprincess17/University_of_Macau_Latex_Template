% Dictates which colours are used
\ProvidesPackage{beamercolorthemeCityU}

\mode<presentation>
% Define Colours
\definecolor{glassgrey}{rgb}{220,220,220}
\definecolor{cityugreen}{RGB}{0,130,100}

% Set Colours
\setbeamercolor{title}{parent=cityugreen}
\setbeamercolor{title}{fg=cityugreen}
\setbeamercolor{subtitle}{parent=cityugreen}
\setbeamercolor{author}{parent=glassgrey}
\setbeamercolor{date}{parent=cityugreen}
\setbeamercolor{institute}{parent=cityugreen}

\setbeamercolor{section title}{parent=cityugreen}
\setbeamercolor{subsection title}{parent=cityugreen}
\setbeamercolor{frametitle}{parent=cityugreen}
\setbeamercolor{background canvas}{parent=cityugreen}
\setbeamercolor{structure}{fg=cityugreen}

\setbeamercolor{normal text}{fg=black!97}

\setbeamercolor{footnote}{fg=black!97}
\setbeamercolor{page number in head/foot}{fg=cityugreen}

\mode
<all>